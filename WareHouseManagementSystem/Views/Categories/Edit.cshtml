@model WareHouseManagementSystem.Models.Categories
<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Edit Category</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Category</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Edit">
                        <div class="card-body">
                            <div class="form-group">

                                <input asp-for="Id" type="hidden" class="form-control" id="exampleInputEmail1" placeholder="ID" required> @*//id field *@
                            </div>
                            <div class="form-group">
                                <label>Enter Name</label>
                                <input asp-for="Name" type="text" class="form-control" id="exampleInputPassword1" placeholder="Name" required> @*// name field*@
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" value="Save" class="btn btn-primary">Save Changes</button> @*// save changes button *@
                        </div> 
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
