@model IEnumerable<WareHouseManagementSystem.Models.CategoryDetailViewModel>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Categories</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Category</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Category List</h3> @*//main heading*@
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <a asp-area="" asp-controller="Categories" asp-action="Create" class="btn btn-primary">Add Category</a>         @*// add category button*@
                        <br /><br />@* //one line space*@
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>   @*// table heading*@
                                    <th>No Of Products</th>   @*// table heading*@
                                    <th>Total Price Products</th>   @*// table heading*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    double totalPrice = 0;
                                    foreach (var p in item.Products)
                                    {
                                        totalPrice += p.Quantity * p.Price;
                                    }
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Products.Count</td>
                                        <td>@totalPrice</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
@section Scripts{

    <!-- Page specific script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false
            });
        });
    </script>
}