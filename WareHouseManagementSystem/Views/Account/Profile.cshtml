@model WareHouseManagementSystem.Models.User
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Profile</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Profile Details</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">My Profile</h3> @*// main heading*@
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Profile">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Name" asp-for="Username" readonly /> @*// username field*@
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Password" asp-for="Password"  /> @*// password field*@
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary" id="btnSubmit">Update Password</button>&nbsp; @*// delete profile button*@
                            <button type="button" class="btn btn-primary" id="btnDelete">Delete Profile</button> @*// delete profile button*@
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        $('#btnDelete').click(function(e)  {
            e.preventDefault();
            if (confirm("Are you sure!")) {
                window.location.href = '/Account/DeleteConfirmed'
            }
        });
    </script>
}